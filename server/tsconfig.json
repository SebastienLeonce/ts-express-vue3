{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "../dist/server",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types", "server/@types"],
    "sourceMap": true,
    "baseUrl": "./",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@daos/*": [
        "daos/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@server": [
        "Server"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": ["Server.ts"],
  "include": [
    "./**/*.ts"
  ],
}
